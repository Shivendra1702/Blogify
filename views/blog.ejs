<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/navbar") %>

    <div class="container mt-4" style="text-align: center">
      <img
        src="<%= blog.coverImage %>"
        alt=""
        width="700px"
        class="img-fluid"
      />
      <h1><%= blog.title %></h1>
      <p><%= blog.body %></p>

      <div class="container mt-5">
        <img
          src="<%= blog.createdBy.profileImageURL %>"
          alt=""
          width="60px"
          height="60px"
          class="mb-2 img-fluid"
        />
        <h5 style="display: inline"><%= blog.createdBy.fullName %></h5>
      </div>
    </div>

    <div class="container mt-4">
      <h2 class="mb-4">Comments(<%= comments.length %>)</h2>
      <% if (locals.user) { %>
      <form method="post" action="/blog/comment/<%=blog._id %>">
        <div class="mb-3">
          <label for="content" class="form-label">Add Comment</label>
          <input type="text" name="content" class="form-control" id="content" />
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
      </form>
      <% } %>

      <div class="container">
        <% locals.comments.forEach(comment => { %>

        <div class="mt-3">
          <img
            src="<%= comment.createdBy.profileImageURL %>"
            alt=""
            width="50px"
            height="50px"
            class="img-fluid"
          />
          <h6 style="display: inline"><%= comment.createdBy.fullName %></h6>
          <%= comment.content %>
        </div>

        <% }) %>
      </div>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
